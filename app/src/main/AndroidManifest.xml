<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zudkin.movieapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/movielogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/movielogo"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieApp">
        <activity
            android:name=".activities.AppInformation"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.FavouritesInfo"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.FavouritesMovie"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.SearchInfoMovie"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.DetailMovie"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.SearchMovie"
            android:exported="false"
            android:windowSoftInputMode="adjustNothing"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.DeveloperInformation"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".main.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>