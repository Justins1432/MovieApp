<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navigation_app"
    tools:context=".activities.DeveloperInformation"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/name_developer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/actor"
        android:text="@string/name_developer"
        android:textColor="@color/title_app"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/sex_develop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_developer"
        android:layout_alignLeft="@id/name_developer"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="@string/sex_developer"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/dateBirthDevelop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_developer"
        android:layout_alignRight="@id/name_developer"
        android:layout_centerVertical="true"
        android:layout_marginTop="9dp"
        android:text="@string/data_of_birth_developer"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewDeveloper"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/name_developer"
        android:layout_centerInParent="true"
        android:layout_marginTop="35dp"
        app:cardCornerRadius="60dp"
        app:cardElevation="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription"
            app:srcCompat="@drawable/developer"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/number_phone_develop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/actor"
        android:text="@string/number_phone_developer"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_centerInParent="true"
        android:layout_below="@id/cardViewDeveloper"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/email_develop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/actor"
        android:text="@string/email_developer"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_centerInParent="true"
        android:layout_below="@id/number_phone_develop"
        android:layout_marginTop="10dp"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/email_develop"
        android:layout_alignRight="@id/sex_develop"
        android:layout_centerInParent="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/drawable_button_circle"
        android:src="@drawable/ic_baseline_phone_24" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/email_develop"
        android:layout_alignLeft="@id/dateBirthDevelop"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/drawable_button_circle"
        android:src="@drawable/ic_baseline_email_24" />


</RelativeLayout>