<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SearchMovie"
    android:background="@color/navigation_app"
    android:padding="15dp">

    <EditText
        android:id="@+id/editTextSearch"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:background="@drawable/drawable_rounded_edittext"
        android:drawableLeft="@drawable/ic_baseline_search_24"
        android:inputType="textPersonName"
        android:textColor="@color/title_app"
        android:textColorHighlight="@color/navigation_app"
        android:textColorHint="@color/title_app"
        android:textColorLink="@color/navigation_app"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_search_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextSearch"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="5dp" />

</RelativeLayout>